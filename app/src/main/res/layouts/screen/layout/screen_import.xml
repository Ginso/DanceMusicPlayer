<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_panel_color"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/status_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:background="@drawable/ripple_oval"
        android:padding="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:tint="@color/FlatWhite" />
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        android:gravity="center"
        android:textColor="@color/FlatWhite"
        android:text="Tags"
        android:textStyle="bold"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="never">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bottom_back_stack_spacing">
            <TextView
                android:id="@+id/importTitle"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_effect"
                android:fontFamily="@font/hevetica_font"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="46dp"
                android:text="Import"
                android:textColor="@color/FlatWhite"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tagsTitle"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_effect"
                android:fontFamily="@font/hevetica_font"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="46dp"
                android:text="Tags"
                android:textColor="@color/FlatWhite"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/importTitle" />
            <RadioGroup
                android:id="@+id/tagChooser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:checkedButton="@id/allTags"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tagsTitle">
                <RadioButton
                    android:id="@+id/ownTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FlatWhite"
                    android:textSize="24sp"
                    android:text="Keep only existing tags"/>
                <RadioButton
                    android:id="@+id/newTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FlatWhite"
                    android:textSize="24sp"
                    android:text="Keep only new tags"/>
                <RadioButton
                    android:id="@+id/allTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FlatWhite"
                    android:textSize="24sp"
                    android:text="Keep all tags"/>

            </RadioGroup>
            <TextView
                android:id="@+id/conflictLabel"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_effect"
                android:fontFamily="@font/hevetica_font"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="46dp"
                android:text="duplicate tag names of different types detected. Choose how to proceed:"
                android:textColor="@color/FlatWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tagChooser"
                app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                android:id="@+id/conflicts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#000000"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/conflictLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </LinearLayout>
            <TextView
                android:id="@+id/songsTitle"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_effect"
                android:fontFamily="@font/hevetica_font"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="46dp"
                android:text="Songs"
                android:textColor="@color/FlatWhite"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/conflicts" />
            <RadioGroup
                android:id="@+id/songChooser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:checkedButton="@id/allSongsOverwrite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/songsTitle">
                <RadioButton
                    android:id="@+id/ownSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FlatWhite"
                    android:textSize="24sp"
                    android:text="Keep only existing song data"/>
                <RadioButton
                    android:id="@+id/newSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FlatWhite"
                    android:textSize="24sp"
                    android:text="Keep only new song data"/>
                <RadioButton
                    android:id="@+id/allSongsOverwrite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FlatWhite"
                    android:textSize="24sp"
                    android:text="Merge(using new tags in conflicts)"/>
                <RadioButton
                    android:id="@+id/allSongsKeep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FlatWhite"
                    android:textSize="24sp"
                    android:text="Merge(using existing tags in conflicts)"/>
            </RadioGroup>
            <TextView
                android:id="@+id/root_title"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/hevetica_font"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="Root Folder: "
                android:textColor="@color/FlatWhite"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/songChooser" />

            <TextView
                android:id="@+id/root_name"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/hevetica_font"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text=""
                android:textColor="@color/FlatWhite"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/root_title"
                app:layout_constraintTop_toBottomOf="@id/songChooser" />
            <Button
                android:id="@+id/changeRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@id/root_name"
                app:layout_constraintTop_toBottomOf="@id/songChooser"
                android:text="change"
                />
            <LinearLayout
                android:id="@+id/explorer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#000000"
                android:padding="20dp"
                android:visibility="gone"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/root_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </LinearLayout>

            <Button
                android:id="@+id/importBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="import"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explorer"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>